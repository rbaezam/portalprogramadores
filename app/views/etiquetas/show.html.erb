<section id="etiqueta_descripcion" class="span-24 last">
	<h4>Mostrando elementos etiquetados con: <strong><%= @etiqueta.nombre %></strong></h4>
	<p>
		<%= @etiqueta.descripcion %>
	</p>
</section>

<section id="preguntas" class="span-10">
	<h2>Preguntas</h2>
	<ul>
		<% @preguntas.each do |pregunta| %>
		<li class="pregunta">
			<section class="titulo">
				<h4>
					<%= link_to pregunta.titulo, mostrar_pregunta_path(pregunta.id, pregunta.slug) %>
				</h4>
			</section>
			<section class="datos">
				<ul>
					<li>
						Preguntado por: <%= pregunta.usuario.login unless pregunta.usuario.nil? %>
					</li>
					<li>
						<%= pregunta.mostrar_fecha %>
					</li>
				</ul>
			</section>
			<section class="estadisticas">
				<ul>
					<li>
						Vistas: <%= pregunta.vistas %>
					</li>
					<li>
						Votos: <%= pregunta.votos %>
					</li>
					<li>
						Respuestas: <%= pregunta.respuestas.count %>
					</li>
				</ul>
			</section>
			<section class="etiquetas">
				<ul>
					<% pregunta.etiquetas.each do |etiqueta| %>
					<li>
						<%= link_to etiqueta.nombre, mostrar_etiqueta_path(etiqueta.id, etiqueta.slug) %>
					</li>
					<% end %>
				</ul>
			</section>
		</li>
		<% end %>
	</ul>
</section>
<section id="codigos" class="span-10">
	<h2>Códigos</h2>
	<ul>
		<% @codigos.each do |codigo| %>
		<li>
			<section class="titulo">
				<h4><%= link_to codigo.titulo, mostrar_codigo_path(codigo.id, codigo.slug) %></h4>
			</section>
			<section class="datos">
				<ul>
					<li>
						Subido por: <%= codigo.usuario.login unless codigo.usuario.nil? %>
					</li>
					<li>
						<%= codigo.mostrar_fecha %>
					</li>
				</ul>
			</section>
			<section class="estadisticas">
				<ul>
					<li>
						Vistas: <%= codigo.vistas %>
					</li>
					<li>
						Descargas: <%= codigo.descargas %>
					</li>
					<li>
						Puntuación: <%= codigo.puntuacion %>
					</li>
				</ul>
			</section>
			<section class="etiquetas">
				<ul>
					<% codigo.etiquetas.each do |etiqueta| %>
					<li>
						<%= link_to etiqueta.nombre, mostrar_etiqueta_path(etiqueta.id, etiqueta.slug) %>
					</li>
					<% end %>
				</ul>
			</section>
		</li>
		<% end %>
	</ul>
</section>

<div class="clear"></div>