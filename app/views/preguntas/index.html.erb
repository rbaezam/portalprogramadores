<section class="container">
	<section class="span-18" id="preguntas">
		<h1>Preguntas</h1>
		<ul>
			<% @preguntas.each do |pregunta| %>
			<li class="pregunta">
				<section class="titulo">
					<h3>
						<%= link_to pregunta.titulo, mostrar_pregunta_path(pregunta.id, pregunta.slug) %>
					</h3>
				</section>
				<section class="datos">
					<ul>
						<li>
							Preguntado por: <%= pregunta.usuario.login unless pregunta.usuario.nil? %>
						</li>
						<li>
							<%= pregunta.mostrar_fecha %>
						</li>
					</ul>
				</section>
				<section class="estadisticas">
					<ul>
						<li>
							Vistas: <%= pregunta.vistas %>
						</li>
						<li>
							Votos: <%= pregunta.votos %>
						</li>
						<li>
							Respuestas: <%= pregunta.respuestas.count %>
						</li>
					</ul>
				</section>
				<section class="etiquetas">
					<ul>
						<% pregunta.etiquetas.each do |etiqueta| %>
						<li>
							<%= link_to etiqueta.nombre, mostrar_por_etiqueta_preguntas_path(etiqueta.id, etiqueta.slug) %>
						</li>
						<% end %>
					</ul>
				</section>
			</li>
			<% end %>
		</ul>
	</section>
	
	<section class="span-6 last">
		<script type="text/javascript"><!--
			google_ad_client = "ca-pub-5471977035368249";
			/* portalprogramadores200x200 */
			google_ad_slot = "1147122252";
			google_ad_width = 200;
			google_ad_height = 200;
			//-->
			</script>
			<script type="text/javascript"
			src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
			</script>
	</section>
</section>
